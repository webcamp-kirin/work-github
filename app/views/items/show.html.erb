<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-2 item-show">
      <%= attachment_image_tag(@item, :image, size: "300x200", fallback: "no_image.jpg" ) %>
    </div>
    <div class="col-xs-6 item-show">
      <div class="item-description">
        <div class="field item-name">
          <h2><%= @item.name %></h2>
        </div>
        <div class="field">
          <%= @item.description %>
        </div>
        <div class="field item-price">
          <h3>¥ <%= @item.price %>
              <span class="tax">(税込)</span>
          </h3>
        </div>
      </div>
      <div class="field">
          <%= form_with model:@cart_item , url:cart_items_path, method: :post do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
            <%= f.submit "カートに入れる", class: "btn btn-success" %>
          <% end %>
      </div>
  </div>
</div>