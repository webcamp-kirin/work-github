<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h2 class=""><mark>注文情報入力</mark></h2>
    </div>
  </div>
  <div class="row mt-5">
    <%= form_with model:@order, url:confirm_path, method: :post, local: true  do |f| %>
    <div class="offset-2 col-5">
      <div class="row">
        <strong class="">支払い方法</strong>
      </div>
        <div class="form-check mt-3">
          <%= f.radio_button :payment, :クレジットカード %>
          <%= f.label :payment, "クレジットカード", {value: :"クレジットカード", style: "display: inline-block;"} %><br>
          <%= f.radio_button :payment, :銀行振込 %>
          <%= f.label :payment, "銀行振込", {value: :"銀行振込", style: "display: inline-block;"} %>
        </div>
        <div class="row mt-3">
          <strong class="">お届け先</strong>
        </div>
        <div class="form-check mt-3">
          <% address = " 〒" + current_customer.postal_code + " " + current_customer.address + " " + current_customer.last_name + current_customer.first_name %>
          <%= f.radio_button :select, :my_address %>
          <%= f.label :select, "ご自身の住所", {value: :my_address, style: "display: inline-block;"} %>
          <%= address %><br>
          <%= f.radio_button :select, :select_address %>
        </div>
        <div class="row mt-5">
          <%= f.submit "確認画面へ進む", class: "btn btn-info ml-auto" %>
        </div>
    </div>
    <% end %>
    <div class=" offset-1 col-3">
      <div class="row">
        <strong class="">新しいお届け先を登録する</strong>
      </div>
        <%= form_with model:@shipping, url:shippings_path do |f| %>
        <div class="form-group row mt-3">
          <%= f.text_field :postal_code, placeholder: "郵便番号", class: "form-control offset-1 col-10" %>
        </div>
        <div class="form-group row">
          <%= f.text_field :address, placeholder: "住所", class: "form-control offset-1 col-10" %>
        </div>
        <div class="form-group row">
          <%= f.text_field :name, placeholder:"宛名", class: "form-control offset-1 col-10" %>
        </div>
        <div class="row">
          <%= f.submit '新規登録', class: "btn btn-sm btn-success ml-auto" %>
        </div>
        <% end %>
    </div>
  </div>
</div>