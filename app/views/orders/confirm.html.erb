<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h2 class=""><mark>注文情報確認</mark></h2>
    </div>
  </div>
  <div class="row mt-3">
    <div class="offset-1 col-7">
      <table class="table table-sm ">
        <thead>
          <tr class="">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% current_customer.cart_items.each do |cart_item| %>
            <tr class="">
              <td>
                <%= attachment_image_tag cart_item.item, :image, :size => '50x50',fallback: "no_image.jpg" %>
                <span> </span>
                <%= cart_item.item.name %>
              </td>
              <td class="align-middle"><%= (cart_item.item.price * 1.1).floor %></td>
              <td class="align-middle"><%= cart_item.amount %></td>
              <td class="align-middle"><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-2 d-flex">
      <table class="table table-sm align-self-end">
        <tbody>
          <tr class="">
            <td>送料</td>
            <td>800</td>
          </tr>
          <tr class="">
            <td>商品合計</td>
            <td>商品合計</td>
          </tr>
          <tr class="">
            <td>請求金額</td>
            <td>請求金額</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-5">
    <div class="offset-2 col-6">
      <div class="row mt-3">
        <strong class="">支払い方法</strong>
        <span class=""></span>
      </div>
      <div class="row mt-3">
        <strong class="">　お届け先　</strong>
        <span class=""></span>
      </div>
    </div>
    <div class="col-3">
      <%=link_to "注文を確定する", thx_path, class: "btn btn-success ml-auto" %>
    </div>
  </div>
</div>