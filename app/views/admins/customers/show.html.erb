<div class="container">
<h1 class="p-3 md-2 bg-light text-dark"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h1>
<table class="row">
    <tbody>
    <tr>
     <th>会員ID</th><th><%= @customer.id %></th>
    </tr>
    <tr>
     <th>氏名</th><th><%= @customer.last_name %><%= @customer.first_name %></th>
    </tr>
    <tr>
     <th>フリガナ</th><th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
    </tr>
    <tr>
     <th>郵便番号</th><th><%= @customer.postal_code %></th>
    </tr>
    <tr>
     <th>住所</th><th><%= @customer.address %></th>
    </tr>
    <tr>
     <th>電話番号</th><th><%= @customer.phone_number %></th>
    </tr>
    <tr>
     <th>メールアドレス</th><th><%= @customer.email %></th>
    </tr>
    <tr>
     <th>会員ステータス</th>
     <th>
       <% if @customer.is_deleted == true%>
        <p class="text-secondary">退会</p>
       <% else %>
        <p class="text-success">有効</p>
       <% end %>
     </th>
    </tr>
    </tbody>
</table>

<button type="button" class="btn btn-success">
<%= link_to "編集",edit_admins_customer_path(@customer),class:"Link" %>
</button>

<button type="button" class="btn btn-primary">
<%= link_to "注文履歴一覧を見る",admins_orders_path(id: @customer.id),class:"Link" %>
</button>

</div>