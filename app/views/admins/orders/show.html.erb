<h1>注文履歴詳細</h1>
<table class="table">
    <tbody>
    <tr>
     <th>購入者</th><th><%= @customer.last_name %><%= @customer.first_name %></th>
    </tr>
    <tr>
     <th>注文日</th><th><%= @order.created_at %> %></th>
    </tr>
    <tr>
     <th>配送先</th><th><%= @order.address %></th>
    </tr>
    <tr>
     <th></th><th><%= @order.address_name %></th>
    </tr>
    <tr>
     <th>支払い方法</th><th><%= @order.payment %></th>
    </tr>
    <tr>
    <%= form_with(model:@order, url:admins_orders_path, method: :patch) do |f| %>
     <th>注文ステータス</th>
     <th>
         <%= f.select :order_status, Order.order_statuses.keys.to_a, include_blank: true %>
         <%= f.submit '更新' %>
     </th>
    <% end %>
    </tr>
    </tbody>
</table>

<table class="items">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>制作ステータス</th>
       </tr>
    </thead>
    <tbody>
      <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td>¥<%= order_detail.price %></td>
        <td><%= order_detail.amount %></td>
        <% total_payment = order_detail.price * order_detail.amount %>
        <td>¥<%= total_payment.to_s(:delimited) %></td>
        <%= form_with(model:order_detail, url:admins_order_detail_path(order_detail), method: :patch) do |f| %>
            <td>
            <%= f.select :produciton_status, OrderDetail.produciton_statuses.keys.to_a, include_blank: true %>
    		<%= f.submit '更新' %>
    		</td>
    	<% end %>
      </tr>
      <% end %>
    </tbody>
 </table>
 
 <table class="table table-bordered">
    <tbody>
      <tr>
        <td class="bg-light">商品合計</td>
        <td><%= @order_details.sum(:price).to_s(:delimited) %></td>
      </tr>
      <tr>
        <td class="bg-light">配送料</td>
        <td><%= @order.postage.to_s(:delimited) %></td>
      </tr>
      <tr>
        <td class="bg-light">ご請求額</td>
        <% amount_billed = @order.total_payment + @order.postage %>
        <td><%= amount_billed.to_s(:delimited) %></td>
      </tr>
    </tbody>
 </table>
			           