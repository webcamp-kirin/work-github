<div class="admin-orders">
<h1>注文履歴一覧</h1>
  <table class="admin">
      <thead>
       <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
       </tr>
      </thead>
      <tbody>
       <% @orders.each do |order| %>
       <tr>
        <td></td>
        <td>
        <%= @customer.last_name %>
        <%= @customer.first_name %>
        </td>
        <td><%= order.count %></td>
        <td><%= order.order_status %></td>
       </tr>
       <% end %>
       <%= paginate @oders %>
      </tbody>
  </table>
</div>
