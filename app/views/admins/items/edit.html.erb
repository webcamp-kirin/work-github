<% if @item.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="col-md-8 offset-md-2">
 <h4 class="px-2 pt-2">商品編集</h4>
</div>
<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="form-group">  

      <%= form_with model:@item,url: admins_item_path(@item), method: :patch, local:true do |f| %>
      <!--<= form_for @item do |f| %>-->
      
      <div class="form-group row">
        <p class="col-md-3 pt-1 mb-0">商品画像</p>
        <%= f.attachment_field :image %>
      </div>
      
      <div class="form-group row">
        <p class="col-md-3 pt-1 mb-0">商品名</p>
        <%= f.text_field :name %>
      </div>
      
      <div class="form-group row">
        <p class="col-md-3 pt-1 mb-0">商品説明</p>
        <%= f.text_area :description %>
      </div>
      
      <div class="form-group row">
        <p class="col-md-3 pt-1 mb-0">ジャンル</p>
        <%= f.collection_select :genre_id, @genres, :id , :name  %>
      </div>
      
      <div class="form-group row">
        <p class="col-md-3 pt-1 mb-0">税込価格</p>
        <%= f.text_field :price %>円
      </div>
    
      <div class="form-group row">
        <p class="col-md-3 pt-1 mb-0">販売ステータス</p>
        <p><%= f.radio_button :is_active, "true",:size => "30*260" %> 販売中</p>
        <p><%= f.radio_button :is_active, "false",:size => "30*260" %> 販売停止中</p>
      </div>
      
       <div class="form-group row">
        <p><%= f.submit '変更を保存', class: "btn btn-success" %></p>
      </div>
      
 <% end %>
